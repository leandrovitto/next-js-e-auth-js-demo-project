{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules",
			".next",
			".vercel",
			".vscode",
			".idea",
			".DS_Store",
			"*.log",
			"*.sqlite",
			"*.sqlite3",
			"*.db",
			"*.db3",
			"*.pem",
			"*.key",
			"*.crt",
			"*.csr",
			"*.cer",
			"*.pfx",
			"*.p12",
			"*.jks",
			"*.keystore",
			"*.truststore",
			"*.der",
			"*.p7b",
			"*.p7c",
			"*.p7r"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
